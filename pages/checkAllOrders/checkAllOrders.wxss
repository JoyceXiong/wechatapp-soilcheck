/* pages/checkAllOrders/checkAllOrders.wxss */
/** 修改默认的navigator点击态 **/
.checkAllOrders {
  background-color: #F8F8F8;
  height: 100%;
  padding-bottom: 20px;
}
.header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 10px;
  padding-bottom: 10px;
  box-shadow: 0 0 2rpx #bbbbbb;
  height: 25px;
  color: #7D7D7D;
  background-color: #FFF;  
  font-size: 14px;
}
.headeritem {
  color:#3E9ADB;
  text-decoration-line: underline;
}
.viewcontainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
  justify-content: center;
}
.userOders {
  display: block;
  border:solid 1rpx;
  border-color: #ccc;  
  max-height: 300px;
  border-radius: 4px;
  margin-left: 15px;
  margin-right: 15px;
  box-shadow: 0 0 2rpx #bbbbbb;
  margin-top: 15px; 
  background-color: #FFF; 
}
.column {
  flex-basis: 100%;
  display: flex;
  justify-content: space-between;
  margin: 15px;
}
.orderNo {
  color: #7D7D7D;
  font-size: 14px;
}
.orderState {
  color: orange;
  font-size: 12px;
}
.orderTime {
  color: #ADADAD;
  font-size: 12px;
}
.imgview {
  display: block; 
  height: 700px;
  text-align: center;
  padding-top: 20px;
}
.img {
  margin-top:120px;
  width: 128px;
  height: 128px;
}
.nodata  {
  color:#ADADAD;
  font-size:14px;
  display:block;
  text-align: center;
  margin-top:20px;
}